{
  "name": "kysely-nestjs-template",
  "version": "0.0.1",
  "description": "",
  "author": "Khunakorn Johnson",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "cmd": "./cmd.sh",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:mutation": "npx stryker run",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "cli": "./cmd.sh cli",
    "dev": "./cmd.sh dev",
    "debug": "nest start --debug --watch",
    "dev:email": "email dev --dir ./src/helper/email/template --port 3001",
    "db:init": "yarn cmd db:init",
    "db:make": "kysely migrate:make",
    "db:up": "./cmd.sh db:up",
    "db:prev": "./cmd.sh db:prev",
    "repl": "./cmd.sh repl",
    "seed": "yarn kysely seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/terminus": "^10.2.3",
    "@react-email/components": "^0.0.29",
    "@react-email/render": "^1.0.3",
    "bcrypt": "^5.1.1",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "env-var": "^7.5.0",
    "error-stack-parser": "^2.1.4",
    "jest-html-reporters": "^3.1.7",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "nanoid": "3.3.4",
    "nest-commander": "^3.15.0",
    "nest-winston": "^1.9.3",
    "neverthrow": "^8.1.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.3",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@stryker-mutator/core": "^8.6.0",
    "@stryker-mutator/jest-runner": "^8.6.0",
    "@stryker-mutator/typescript-checker": "^8.6.0",
    "@testcontainers/postgresql": "^10.16.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-naming-convention": "^0.1.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.9.0",
    "nestjs-seeder": "^0.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "react-email": "3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "testTimeout": 40000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/src/core/$1",
      "@domain/(.*)": "<rootDir>/src/domain/$1",
      "@testcore/(.*)": "<rootDir>/test/core/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./test-report",
          "filename": "report.html"
        }
      ]
    ],
    "coverageDirectory": "test-report",
    "testEnvironment": "node"
  }
}
